<Window x:Class="HowdyHack2019.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HowdyHack2019"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Background="Silver">
                <Label Content="HackR: A team finding solution" Foreground="Maroon" FontWeight="Bold" FontSize="25"/>
            </StackPanel>
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Select your view"/>
                <StackPanel Orientation="Horizontal" >
                    <Button x:Name="btnParticipant" Content="Participant" Margin="0,0,100,0"/>
                    <Button x:Name="btnOrganizer" Content="Organizer" Margin="100,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        

    </Grid>
</Window>
